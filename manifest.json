{
  "manifest_version": 3,
  "name": "Google Chat Long Text File Sender",
  "version": "1.0",
  "description": "Send long text as a file in Google Chat and Gmail Chat.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.google.com/*", "https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
